@model timetable.Models.Cabinet

@{
    ViewData["Title"] = Model != null ? "Edit" : "Create"; 
}

<h1>Edit</h1>

<h4>Cabinet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["Title"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CabinetId" />
            <div class="form-group">
                <label asp-for="Housing" class="control-label"></label>
                <input asp-for="Housing" class="form-control" />
                <span asp-validation-for="Housing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auditorium" class="control-label"></label>
                <input asp-for="Auditorium" class="form-control" />
                <span asp-validation-for="Auditorium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<timetable.Models.LessonType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
